<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.StefanoBaldini.aplicacion1.PrimeraAppActivity">

    <Button
        android:id="@+id/buttonGoToInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a las instrucciones"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/r4"
        android:layout_below="@id/buttonGoToInstructions"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stefano Baldini"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/text2"
        android:layout_width="370dp"
        android:layout_height="77dp"
        android:text="Desarrollo de aplicaciones para dispositivos móviles"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/text1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/text3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Año 2023"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/text2"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/buttonGoToGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jugar"
        android:textColor="@color/purple_200"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_below="@id/text3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
